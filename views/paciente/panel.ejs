			<%- include("../templates/default3") %>
<!-- Banner -->
			<section id="banner" style="background-color: #1abc9c">
				<div class="inner">
					<h1>Tu salud es lo que mas nos importa <%= user.nombre %><br/>
                        <img src="ic_launcher/web_hi_res_512.png" alt="icon" style="width:150px;height:150px;" ><br/>
                    <a href="https://www.ipn.mx">Nutri2</a></h1>
					<ul class="actions">
						<% if(user.imc == null && user.tmb == null){ %>
								<li><a href="#" class="button alt scrolly big" data-toggle="modal" data-target="#ModalAF" >Calcula tu IMC y TMB</a></li>
						<%	} %>
						
					</ul>
				</div>
			</section>

			<div class="modal fade" id="ModalAF" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Para calcular tu TMB</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                            <form action="/Paciente/Calc" method="post" id="form">
                                <fieldset class="form-group">
                                    <div class="row">
                                        Selecciona tu nivel de Actividad Fisica
                                        <div class="col-sm-10">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="AFRadios" id="poco" value="1.2" checked>
                                                <label class="form-check-label" for="poco">
                                                    Poco o ningún ejercicio
                                                </label>
                                            </div>
                                           	<br> 
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="AFRadios" id="ligero" value="1.375">
                                                <label class="form-check-label" for="ligero">
                                                    Ejercicio ligero (1-3 días por semana)
                                                </label>
                                            </div>
                                            <br>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="AFRadios" id="moderado" value="1.55">
                                                <label class="form-check-label" for="moderado">
                                                    Ejercicio Moderado (3-5 días por semana)
                                                </label>
                                            </div>
                                            <br>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="AFRadios" id="fuerte" value="1.725">
                                                <label class="form-check-label" for="fuerte">
                                                    Ejercicio Fuerte (6 días por semana)
                                                </label>
                                            </div>
                                            <br>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="AFRadios" id="extremo" value="1.9">
                                                <label class="form-check-label" for="extremo">
                                                    Ejercicio profesional o extremo
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" form="form">Send message</button>
                        </div>
                    </div>
                </div>
            </div>

			
