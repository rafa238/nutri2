		<%- include("../templates/default3") %>
		<div class="container-fluid">            
            <div class="row">
                <div class="col">
                    <form action="/Nutriologo/RegAli" method="post">
                        <div class="form-group">
                            <label for="nA">Nombre del Alimento</label>
                            <input type="text" name="nombreA" id="nA" placeholder="Nombre del Alimento" class="form-control" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="tipoA">Tipo de Alimento</label>
                                <select id="tipoA" class="form-control" name="tipoA" required>
                                	<% for (var i = 0; i < tipoAli.length; i++) { %>
										<option> <%= tipoAli[i].descTiA %> </option>
									<% } %>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="ca">Calorias</label>
                                <input type="number" name="cal" id="ca" placeholder="Calorias" class="form-control" min="0" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="pro">Proteínas</label>
                                <input type="number" name="prote" id="pro" placeholder="Proteinas" class="form-control" min="0" step="0.001" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="h">Hidratos</label>
                                <input type="number" name="hail" id="h" placeholder="Hidratos" class="form-control" min="0" step="0.001" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="g">Grasas</label>
                                <input type="number" name="grasa" id="g" placeholder="Grasas" class="form-control" min="0" step="0.001" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="inG">Indíce Glucémico</label>
                                <input type="number" name="ig" id="inG" placeholder="Indíce Glucémico" class="form-control" min="0" step="0.001" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="sM">Sales Minerales</label>
                                <input type="number" name="salesM" id="sM" placeholder="Sales Minerales" class="form-control" min="0" step="0.001" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="v">Vitaminas</label>
                                <input type="number" name="vitmns" id="v" placeholder="Vitaminas" class="form-control" min="0" step="0.001" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="des">Descripción</label>
                            <textarea maxlength="200" placeholder="Descripcion" name="desc" id="des" required></textarea> 
                        </div>
                        <button type="submit" class="btn btn-primary">Registrar Alimento</button>
                    </form>
                </div>
                <div class="col">
                	<div class="card-columns">
	                	<% for (var i = 0; i < alimentos.length; i++) { %>
							<div class="card border-success ">
	                            <div class="card-header bg-transparent border-success"><%= alimentos[i].descTiA%></div>
	                            <div class="card-body text-success">
	                                <h5 class="card-title"><%= alimentos[i].nombreA%></h5>
	                                <p class="card-text"><%= alimentos[i].descri%></p>
	                            </div>
	                            <div class="card-footer bg-transparent border-success">
	                                <ul class="list-group list-group-flush">
	                                    <li class="list-group-item" style="background: none">Calorias: <%= alimentos[i].calorias%> Kcal/100gr</li>
	                                    <li class="list-group-item" style="background: none">Proteinas: <%=alimentos[i].proteinas %> gr/100gr</li>
	                                    <li class="list-group-item" style="background: none">Hidratos: <%= alimentos[i].hidratos%> gr/100gr</li>
	                                    <li class="list-group-item" style="background: none">Grasas: <%= alimentos[i].grasas%> gr/100gr</li>
	                                    <li class="list-group-item" style="background: none">Índice Glucemico: <%= alimentos[i].indiceG%></li>
	                                    <li class="list-group-item" style="background: none">Sales Minerales: <%= alimentos[i].salesMine%></li>
	                                    <li class="list-group-item" style="background: none">Vitaminas: <%= alimentos[i].vitamins%></li>
	                                </ul>
	                            </div>
	                        </div>
						<% } %>
                    </div>
                </div>
            </div>
        </div>
        <script src="assets/js/jquery.min.js"></script>
        <script src="assets/js/jquery.scrolly.min.js"></script>
        <script src="assets/js/skel.min.js"></script>
        <script src="assets/js/util.js"></script>
        <script src="assets/js/main.js"></script>
    </body>
</html>
